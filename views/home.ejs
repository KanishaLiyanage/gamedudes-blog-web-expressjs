<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GameDudes Home</title>

    <link rel="stylesheet" href="css/home.css">

</head>

<body>

    <%- include("header") -%>

        <section class="baner-area">
            <div class="baner-container">
                <div class="background-img">
                    <div class="background-overlay">
                        <div class="baner-content">
                            <h1>Dude Youâ€™re In The Right Place</h1>
                            <p>
                                The most popular blog website for gamers
                                to post experiences in games and see the latest
                                news about games.
                            </p>
                            <div class="baner-button">
                                <a href="#browse">See Latest News</a>
                                <!-- <a href="/compose">Tell Your Experience</a> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content -->
        <section id="browse">

            <div class="container">

                <div class="row">

                    <!-- Blog Entries Column -->
                    <div class="col-md-8">

                        <h1 class="my-4">Latest News</h1>

                        <% postsList.forEach(function(post){ %>

                            <!-- Blog Posts -->
                            <div class="card mb-4">
                                <img class="card-img-top" src="<%= post.imageURL %>" alt="Card image">
                                <div class="card-body">
                                    <h2 class="card-title">
                                        <%= post.title %>
                                    </h2>
                                    <p class="card-text">
                                        <%= post.description.substring(0, 500) + " ..." %>
                                    </p>
                                    <a href="/posts/postID=<%=post._id%>" class="btn btn-primary">Read More &rarr; </a>
                                </div>
                                <div class="cat-row">
                                    <div class="card-footer text-muted">
                                        Posted on <%= post.dateCreated %> by
                                            <a href="/user/userID=<%= post.userID %>">
                                                <%= post.userName %>
                                            </a>
                                    </div>
                                    <div class="cat-title">Category: <%= post.category %>
                                    </div>
                                </div>

                            </div>

                            <% }); %>

                                <!-- Pagination -->
                                <ul class="pagination justify-content-center mb-4">
                                    <li class="page-item">
                                        <a class="page-link" href="#">&larr; Older</a>
                                    </li>
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">New posts &rarr;</a>
                                    </li>
                                </ul>

                    </div>

                    <!-- Sidebar Widgets Column -->
                    <div class="col-md-4">
                        <!-- Search Widget -->
                        <form action="/posts/search" method="POST">
                            <div class="card my-4 ">
                                <h5 class="card-header">Search Blogs by category</h5>
                                <div class="card-body">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="catName" placeholder="Search for...">
                                        <span class="input-group-btn">
                                            <button class="btn btn-secondary" type="submit" name="search">Go!</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="card my-4 ">
                            <h5 class="card-header">Compose a Blog</h5>
                            <div class="card-body">
                                <a href="/compose" class="btn compose-btn-primary">Compose &rarr; </a>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.row -->

            </div>

        </section>

        <%- include("footer") -%>

</body>

</html>